<div>
 <%= flash[:notice] %>
</div>
<h2>User info</h2>
<image>
 <% if current_user.profile_image.attached? %>
  <%= image_tag current_user.profile_image, size: "100x100" %>
 <% else %>
  <%= image_tag 'no_image', size: "100x100" %>
 <% end %>
</image>
<table class="table">
 <tr>
  <td>name</td>
  <td><%= current_user.name %></td>
 </tr>
 <tr>
  <td>introduction</td>
  <td><%= current_user.introduction %></td>
 </tr>
</table>
<div class="row">
 <%= link_to(edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" )do %>
  <i class="fas fa-user-cog" aria-hidden="true"></i>
 <% end %>
</div>
<h2 class="mt-3">New book</h2>
<% if book.errors.any? %>
 <div id="error_explanation" data-turbo-cache="false">
  <h2>
   <%= I18n.t("errors.messages.not_saved",
                 count: book.errors.count,
                 resource: book.class.model_name.human.downcase)
    %>
  </h2>
  <ul>
   <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
 </div>
 <%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
 <% end %>
<% else %>
 <%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
 <% end %>
<% end %>